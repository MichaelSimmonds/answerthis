<h1>Current question: <%= @question.body %></h1>
<%= simple_form_for [@question, @answer] do |f| %>

  <%= f.input :body, label: 'Answer', class: "form_field", placeholder: "blabla", required: true %>

<%= f.submit %>
<% end %>

<% @question.answers.order(created_at: :desc).each do |answer| %>
  <pre>
    <%= answer.body %>
  </pre>
  <%= link_to 'Destroy', question_answer_path(@question, answer),
            data: {confirm: 'Are you sure?'}, method: :delete %>
<% end %>

<% if @over_limit %>
  <%flash[:alert] = "You have too many answer to continue" %>
<%end%>

  <%= link_to_unless(@question.answers.length > 4, "Next question", new_questionnaire_question_path(@question.questionnaire), class: "btn btn-primary") %>

<%= link_to_unless(@question.answers.length > 4, "Show Questionnaire", questionnaire_path(@question.questionnaire), class: "btn btn-primary") %>
