<div class="theme text-center">
  <h2>Log in</h2>
  <hr class="orange-line-smaller">
  <div class="form-wrapper">
    <div class="form-div">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, placeholder: 'example@email.com', style: 'width: 50%;' %>
        <%= f.input :password, required: false, placeholder: '******', style: 'width: 50%;' %>
      </div>

      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'start-btn-form' %>
      </div>

      <% end %>
    </div>
  </div>
  <hr class="orange-line-smaller">
  <%= render "devise/shared/links" %>
</div>
