<div class="text-center prize-description-div"">

  <h3>Choose prize</h3>
  <p>Title: <%= @questionnaire.title %></p>
  <p>Description: <%= @questionnaire.description %></p>
  <br>

  <% @prizes.each do |prize| %>
    <div class='prize-div'>

      <% selected_prize = prize.id%>
      <%= simple_form_for [@questionnaire, @result] do |f|  %>
        <%= f.hidden_field :result, value: selected_prize %>
        <%= f.submit prize.title, class: "btn btn-primary btn-md prize-btn" %>
      <% end %>

    </div>
  <% end %>

</div>
