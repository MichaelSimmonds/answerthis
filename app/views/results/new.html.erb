<div class="text-center prize-description-div theme">

  <h3>Choose prize</h3>
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-4">
        <div class="prize-selection-div">
          <% @prizes.each do |prize| %>
          <div class='prize-div' style="background-image:url('<%= image_path prize.image_url %>');
            ')">
            <% selected_prize = prize.id%>
            <%= simple_form_for [@questionnaire, @result] do |f|  %>
            <%= f.hidden_field :result, value: selected_prize %>
            <%= f.submit prize.title, { class: "prize-btn" } %>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


</div>
