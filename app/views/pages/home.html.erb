<div class="text-center theme">


  <div class="hero-banner">

    <%= image_tag("laptop.png", class: "image-left") %>
    <!-- FOR CLIENTS -->
      <% if current_user && current_profile.is_client == 1 %>
      <%= render "home_clients"%>
      <% end %>
    <!-- FOR END USERS -->
      <% if current_user && current_profile.is_client != 1 %>
        <%= render "home_end_user" %>
      <% end %>
    <!-- FOR THE PUBLIC -->
      <% if !current_user %>
      <%= render "home_for_public" %>
      <% end %>

      <%= image_tag("phone.png", class: "image-right") %>

  </div>

</div>
